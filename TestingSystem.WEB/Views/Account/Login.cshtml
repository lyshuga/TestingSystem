@model TestingSystem.WEB.Models.Account.LoginViewModel

@{
    ViewBag.Title = "Authorize";
}


<div class="container">
    <div class="wrapper">

        <div class="form-signin">
            <h3 class="form-signin-heading">Please Sign In</h3>
            <hr />
            @Html.ValidationSummary("", new { @class = "text-danger" })

            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.returnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()

                <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />

                <div class="form-group">
                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = "Enter login" })
                </div>
                <div class="form-group">
                    @Html.PasswordFor(x => x.Password, new { @class = "form-control", placeholder = "Enter password" })
                </div>
                <hr />
                <div class="form-group">
                    <button class="btn btn-primary form-control" type="submit">Login</button>
                </div>
            }
        </div>

    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
