@model IEnumerable<TestingSystem.WEB.Models.Tests.TestViewModel>

@{
    ViewBag.Title = "All Tests";
    int count = 0;
}

<br />
<div class="card">
    <div class="card-header">
        <h4>All Tests</h4>
    </div>
    <div class="card-body">
        <table class="table table-striped table-bordered">
            <tr>
                <th class="text-center">#</th>
                <th class="text-center" style="width: 20%">Name</th>
                <th class="text-center" style="width: 50%">Descri[tion</th>
                <th class="text-center">Actions</th>
            </tr>

            @foreach (var item in Model)
            {
                count++;
                @Html.HiddenFor(modelItem => item.Id)
                <tr>
                    <td class="text-center">@count</td>
                    <td style="width: 20%">@Html.DisplayFor(modelItem => item.Name)</td>

                    <td style="width:50%">@Html.DisplayFor(modelItem => item.TestDescription)</td>
                    <td class="text-center">

                        <div class="row justify-content-center">
                            @using (Html.BeginForm("RunTest", "Test", null, FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                <input data-val="true" name="Id" type="hidden" value="@item.Id">

                                <div class="col-lg-auto">
                                    <button type="submit" value="Run" class="btn btn-sm btn-success">Run</button>
                                </div>
                            }

                            <div class="col-lg-auto">
                                @Html.ActionLink("Details", "Details", "Test", new { id = item.Id }, new { @class = "btn btn-sm btn-primary", role = "button" })
                            </div>

                            @using (Html.BeginForm("Delete", "Test"))
                            {
                                @Html.AntiForgeryToken()
                                <input data-val="true" name="Id" type="hidden" value="@item.Id">
                                <div class="col-lg-auto">
                                    <input type="submit" value="Confirm" class="btn btn-sm btn-danger" />
                                </div>
                            }
                        </div>
                    </td>
                </tr>
            }
        </table>
    </div>

    <div class="card-footer">
        @Html.ActionLink("Add a new test", "CreateTest", null, new { @class = "btn btn-primary" })
    </div>
</div>
