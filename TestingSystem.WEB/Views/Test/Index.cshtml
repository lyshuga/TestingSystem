@model IEnumerable<TestingSystem.WEB.Models.Tests.TestViewModel>

@{
    ViewBag.Title = "All Tests";
    int count = 0;
}

<br />
<div class="card">
    <div class="card-header">
        <h4>All Tests</h4>
    </div>
    <div class="card-body">
        <table class="table table-striped table-bordered">
            <tr>
                <th class="text-center">#</th>
                <th class="text-center">Название</th>
                <th class="text-center" colspan="3">Описание</th>
                <th class="text-center">Действия</th>
            </tr>

            @foreach (var item in Model)
            {
                count++;
                @Html.HiddenFor(modelItem => item.Id)
                <tr>
                    <td class="text-center">@count</td>
                    <td>@Html.ActionLink(item.Name, "Edit", new { item.Id })</td>

                    <td colspan="3">@Html.DisplayFor(modelItem => item.TestDescription)</td>

                    <td class="text-center">

                        @using (Html.BeginForm("RunTest", "Test", null, FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <input data-val="true" name="Id" type="hidden" value="@item.Id">

                            <div class="row justify-content-center">
                                <div class="col-lg-auto">
                                    <button type="submit" value="Run" class="btn btn-sm btn-success">Run</button>
                                </div>
                                <div class="col-lg-auto">
                                    @Html.ActionLink("Details", "Details", "Test", new { id = item.Id }, new { @class = "btn btn-sm btn-primary", role = "button" })
                                </div>
                                @*<div class="col-lg-auto">
                                        @Html.ActionLink("Delete", "Delete", "Test", new { id = item.Id }, new { @class = "btn btn-sm btn-danger", role = "button" })
                                    </div>*@
                            </div>
                        }

                        @*ToDo: Remove from here. For Test Delete*@
                        @using (Html.BeginForm("Delete", "Test"))
                            {
                                @Html.AntiForgeryToken()
                                <input data-val="true" name="Id" type="hidden" value="@item.Id">
                                <div class="col-lg-auto">
                                    <input type="submit" value="Confirm" class="btn btn-sm btn-danger" />
                                </div>
                            }
                    </td>
                </tr>
            }
        </table>
    </div>

    <div class="card-footer">
        @Html.ActionLink("Add a new test", "CreateTest", null, new { @class = "btn btn-primary" })
    </div>
</div>
